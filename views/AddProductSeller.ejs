        <body id="body-pd" >
            <!-- Side bar -->
            <%- include("./partials/sidebar") %> 
            <%- include("./partials/navbar") %> 
<!-- The Body of the page  -->
            <div class="container mt-3">
                <div class="py-5">
                    <div class="col col-lg-8 border py-5 ">
                        <p class="h3 text-muted">Add Product</p>
                        <p>Start selling your your products on website</p>
                        <form action="/upload_Product_data" method="post">
                        <div class="row g-3">
                            <div class="">
                                <p class="h5 ml-4">Drag and drop a file or select add Image</p>
                            <div class="upload row ml-3">
                                <div class="file-upload col-5 col-md">  
                                    <div class="image-upload-wrap">
                                      <input class="file-upload-input" type='file' name="file" onchange="readURL(this);" accept="image/*" />
                                      <div class="text-center py-3"><i class="bi bi-cloud-arrow-up uploadicon"></i>
                                          <p class="h5">Upload image</p>
                                      </div>
                                    </div>
                                    <div class="file-upload-content">
                                      <img class="file-upload-image" src="#" alt="your image" />
                                      <div class="image-title-wrap">
                                        <button type="button" onclick="removeUpload()" class="remove-image">Remove <span class="image-title">Uploaded Image</span></button>
                                      </div>
                                    </div>
                                </div>
                                <div class="file-upload col-5 col-md">                              
                                    <div class="image-upload-wrap">
                                      <input class="file-upload-input" type='file' onchange="readURL(this);" accept="image/*" />
                                      <div class="text-center py-3"><i class="bi bi-cloud-arrow-up uploadicon"></i>
                                          <p class="h5">Upload Video</p>
                                      </div>
                                    </div>
                                    <div class="file-upload-content">
                                      <img class="file-upload-image" src="#" alt="your image" />
                                      <div class="image-title-wrap">
                                        <button type="button" onclick="removeUpload()" class="remove-image">Remove <span class="image-title">Uploaded Image</span></button>
                                      </div>
                                    </div>
                                </div>
                                <div class="formcheck mt-4 ml-5">    
                                    <div class="recommendedguideline row">
                                        <div class="coloredleft col-2"><i class="bi bi-exclamation-circle-fill icontip"></i></div>
                                        <div class="col-10">                          
                                            <p>Chech out our <a href="#">Recommended Photo guideline</a> for tips on making your product images</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            </div>
                            <div class="col-12 py-2">
                                <label for="firstName" name="fname" required class="form-label" >Product Name</label>
                                <input type="text" name="product_name" class="form-control border" id="firstName"required autocomplete="off">
                            </div>
                            <div class="col-12 py-2">
                                <label for="price" class="form-label">Price <span class="text-muted"></span></label>
                                <input type="Number" name="Price" class="form-control border" id="price" placeholder="EG 0.00"required >
                            </div>
                            <div class="row col-12 py-2">
                                <div class="col-md-5">
                                    <label for="country" class="form-label">Category</label>
                                    <select class="form-select border"id="select1" name="Category" onchange="myFunction()" required>
                                        <option value="">Choose...</option>
                                        <option value="Men's Fasion">Men's Fasion</option>
                                        <option value="Women's Fasion">Women's Fasion</option>
                                        <option value="kid's Fasion">kid's Fasion</option>
                                        <option value="Toys & Games">Toys & Games</option>
                                        <option value="Books">Books</option>
                                        <option value="Mobiles & Tablets & Accessories">Mobiles & Tablets & Accessories</option>
                                        <option value="Electronics & Home Decices">Electronics & Home Decices</option>
                                        <option value="Computers & Laptops">Computers & Laptops</option>
                                        <option value="Home Furniture">Home Furniture</option>
                                        <option value="Kitchen Tools">Kitchen Tools</option>
                                        <option value="Music">Music</option>
                                        <option value="Movies">Movies</option>
                                        <option value="Programs">Programs</option>
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <label for="state" class="form-label">from Category</label>
                                    <select class="form-select border" id="select2"name="Child_category" >
                                        <option value="">Choose...</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-12 py-2">
                                <label for="text" class="form-label">Add a brieve description <span class="text-muted"></span></label>
                                <textarea type="text" name="brieve_description"class="form-control border" id="desc" placeholder="brieve descripion" required></textarea>
                            </div>
                            <div class="col-12 py-2">
                                <label for="text" class="form-label">Add full descripion <span class="text-muted"></span></label>
                                <textarea type="text" name="full_description" class="form-control border" cols="30" rows="10" id="fulldescription" placeholder="add full description" required></textarea>
                            </div>
                            <div class="col-12 py-2">
                                <label for="url" class="form-label">Checkout URL<span class="text-muted"></span></label>
                                <input type="url" name="checkout_url" class="form-control border" id="email" placeholder="http://www.example.com" required>
                            </div>
                            <div class="my-2">
                                <p class="h4 ml-4">Share this Product</p>
                                <div class="socialIconShare ml-2">
                                    <a href="www.facebook.com" class="sharlink"><i class="bi bi-facebook pl-3"></i></a>
                                    <a href="www.facebook.com" class="sharlink"><i class="bi bi-youtube pl-3"></i></a>
                                    <a href="www.facebook.com" class="sharlink"><i class="bi bi-twitter pl-3"></i></a>
                                    <a href="www.facebook.com" class="sharlink"><i class="bi bi-instagram pl-3"></i></a>
                                    <a href="www.facebook.com" class="sharlink"><i class="bi bi-telegram pl-3"></i></a>                                
                                </div>
                            </div>
                        </div>
                        
                        <button class="w-100 btn btn-success btn-lg mt-4" type="submit">Share Your Product</button>
                        </form>
                    </div>
                </div>
            </div>

            <%- include("./partials/footer") %> 
