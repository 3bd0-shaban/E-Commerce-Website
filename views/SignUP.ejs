
        <%- include("./partials/Head")  %> 

        <body id="body-pd" >
            <!-- Side bar -->
            <%- include("./partials/sidebar") %> 
            <%- include("./partials/navbar") %> 
<!-- The Body of the page  -->
            <div class=" container navigationbar ">	
                <main>
                    <div class="py-5 ms-md-5">
                        <div class="col-md-7 col-lg-8">
                            <h4 class="mb-3">Sign Up</h4>
                            <form action="signupuser" method="post">
                            <div class="row g-3">
                                <div class="col-sm-6">
                                <label for="firstName" name="fname" required class="form-label" >First name</label>
                                <input type="text"name="first_name" class="form-control border" id="firstName"required autocomplete="off">
                                
                                </div>

                                <div class="col-sm-6">
                                <label for="lastName"  class="form-label">Last name</label>
                                <input type="text" name="second_name" class="form-control border" id="lastName"required>
                                </div>
                                
                                <div class="col-12">
                                <label for="username" class="form-label">Username</label>
                                </div>

                                <div class="col-12">
                                <label for="email" class="form-label">Email <span class="text-muted"></span></label>
                                <input type="email" name="email" class="form-control border" id="email" placeholder="you@example.com" required>
                                
                                </div>

                                <div class="col-12">
                                    <label for="password" class="form-label">passowrd <span class="text-muted"></span></label>
                                    <input type="password" name="password" class="form-control border" id="password" placeholder="password" >
                                    
                                </div>
                                    
                                <div class="col-12">
                                    <label for="password" class="form-label">Re-Enter Password <span class="text-muted"></span></label>
                                    <input type="password"name="password" class="form-control border" id="password" placeholder="password" >
                                    
                                </div>
                                
                                <div class="col-12">
                                    <label for="phonenumber" class="form-label">Phone Number <span class="text-muted"></span></label>
                                    <input type="number"name="phonenumber" class="form-control border" id="email" placeholder="number" required>
                                    
                                </div>
                                <h4 class="m-3">Billing Address</h4>   
                                <div class="col-12">
                                <label for="address" class="form-label">Address</label>
                                <input type="text" name="district" class="form-control border" id="address" placeholder="1234 Main St" required>
                                
                                </div>

                                <div class="col-12">
                                <label for="address2" class="form-label">Address 2 <span class="text-muted">(Optional)</span></label>
                                <input type="text" name="apartment" class="form-control border" id="address2" placeholder="Apartment or suite">
                                </div>

                                <div class="col-md-5">
                                <label for="country" class="form-label">Country</label>
                                <select class="form-select border" id="country" >
                                    <option value="">Choose...</option>
                                    <option >Egypt</option>
                                </select>
                                </div>
                                <div class="col-md-4">
                                <label for="state" class="form-label">State</label>
                                <select class="form-select border" id="state" >
                                    <option value="">Choose...</option>
                                    <option>Cairo</option>
                                    <option>Alaxandria</option>
                                    <option>Tanta</option>
                                </select>
                                
                                </div>

                                <div class="col-md-3">
                                <label for="zip" class="form-label">Zip</label>
                                <input type="text"name="zipcode" class="form-control border" id="zip" placeholder="" required>
                                
                                </div>
                            </div>

                            <hr class="my-4">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="save-info">
                                <label class="form-check-label" for="save-info">Save this information for next time</label>
                            </div>
                            

                            <hr class="my-4">
                            <div class="form-check mb-4 form-switch">
                                <input type="checkbox" class="form-check-input checkpayment" id="save-info">
                                <label class="form-check-label" for="flexSwitchCheckChecked">Skip payment information for now</label>
                            </div>
                            <h4 class="mb-3 paymentinformation">Payment</h4>
                            
                            <div class="my-3 paymentinformation">
                                <div class="form-check">
                                <input id="credit" name="paymentMethod" type="radio" class="form-check-input" checked required>
                                <label class="form-check-label" for="credit">Credit card</label>
                                </div>
                                <div class="form-check">
                                <input id="debit" name="paymentMethod" type="radio" class="form-check-input" required>
                                <label class="form-check-label" for="debit">Debit card</label>
                                </div>
                                <div class="form-check">
                                <input id="paypal" name="paymentMethod" type="radio" class="form-check-input" required>
                                <label class="form-check-label" for="paypal">PayPal</label>
                                </div>
                            </div>

                            <div class="row gy-3 paymentinformation">
                                <div class="col-md-6">
                                <label for="cc-name" class="form-label">Name on card</label>
                                <input type="text"name="card_name" class="form-control border" id="cc-name" placeholder="" >
                                <small class="text-muted">Full name as displayed on card</small>
                                
                                </div>

                                <div class="col-md-6">
                                <label for="cc-number" class="form-label">Credit card number</label>
                                <input type="text" name="card_number" class="form-control border" id="cc-number" placeholder="" >
                                
                                </div>

                                <div class="col-md-3">
                                <label for="cc-expiration" class="form-label">Expiration</label>
                                <input type="text" name="card_expire" class="form-control border" id="cc-expiration" placeholder="" >
                                
                                </div>

                                <div class="col-md-3">
                                <label for="cc-cvv" class="form-label">CVV</label>
                                <input type="text" class="form-control border" id="cc-cvv" placeholder="" >
                                
                                </div>
                            </div>

                            <hr class="my-4">

                            <button class="w-100 btn btn-success btn-lg" type="submit">Sign Up</button>
                            <p class="mt-3">You already have an account ? <a href="SignIn.html">Sign in</a></p>
                            </form>
                        </div>
                    </div>
                </main>
            </div>



            <%- include("./partials/footer") %> 
